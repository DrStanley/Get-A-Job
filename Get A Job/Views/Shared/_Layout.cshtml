<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body style="margin-bottom:0px; padding-bottom:0px;">
    <nav class="navbar navbar-expand-lg  navbar-dark fixed-top bg-primary">
        <a class="navbar-brand" href="#">
            <span class="fa fa-joomla" style="width:30px;height:30px; color: antiquewhite"></span> JB Limited
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-between" id="navbarSupportedContent">
            <ul class="navbar-nav">
            </ul>
            <div class="form-inline right my-2 my-lg-0">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", routeValues: null, htmlAttributes: new { id = "registerLink", Class = "nav-link btn btn-primary mr-sm-2 btn-outline-primary text-white" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("About Us", "About", "Home", routeValues: null, htmlAttributes: new { id = "registerLink", Class = "nav-link btn btn-primary mr-sm-2 btn-outline-primary text-white" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Contact", "Contact", "Home", routeValues: null, htmlAttributes: new { id = "registerLink", Class = "nav-link btn btn-primary mr-sm-2 btn-outline-primary text-white" })
                    </li>
                    <li class="nav-item my-2 my-sm-0"> @Html.Partial("_LoginPartial")</li>
                </ul>
            </div>
        </div>
    </nav>


    <div">
        @RenderBody()

    </div>

   <div> <!-- Footer -->
    <footer class="page-footer font-small indigo" style="opacity: 0.9; margin-bottom: 0px; padding-bottom: 0px; background-image: url(../../Image/iStock-1093713604.jpg ); color: white;">

        <!-- Footer Links -->
        <div class="container text-center text-md-left">

            <!-- Grid row -->
            <div class="row">

                <!-- Grid column -->
                <div class="col-md-7">

                    <!-- Links -->
                    <h5 class="font-weight-bold text-uppercase mt-3 mb-4">Addresss</h5>

                    <ul class="list-unstyled">
                        <li>
                            <i class="fa fa-location-arrow" style="width:50px;"></i> <span>777 Brockton Avenue, Abington MA 2351</span>
                        </li>
                        <li>
                            <i class="fa fa-location-arrow" style="width:50px;"></i><span>250 Hartford Avenue, Bellingham MA 2019</span>
                        </li>
                        <li>
                            <i class="fa fa-location-arrow" style="width:50px;"></i> <span>280 Washington Street, Hudson MA 1749</span>
                        </li>

                    </ul>

                </div>
                <!-- Grid column end-->
                <!-- Grid column -->
                <div class="col-md-5">

                    <!-- Links -->
                    <h5 class="font-weight-bold text-uppercase mt-3 mb-4">Social Media</h5>

                    <ul class="list-unstyled">
                        <li>
                            <a class="text-white" href="www.facebook.com"><i class="fa fa-facebook-square"> Get_A_Job</i></a>
                        </li>
                        <li>
                            <a class="text-white" href="www.facebook.com"><i class="fa fa-instagram"> Get_A_Job</i></a>

                        </li>
                        <li>
                            <a class="text-white" href="www.facebook.com"><i class="fa fa-linkedin-square"> Get_A_Job</i></a>
                        </li>
                        <li>
                            <a href="www.facebook.com" class="text-white"><i class="fa fa-pinterest-square"> Get_A_Job</i></a>
                        </li>
                    </ul>

                </div>

            </div>
            <!-- Grid row  end 2-->

        </div>
        <!-- Footer Links -->
        <!-- Copyright -->
        <div class="footer-copyright text-center py-3">
            &copy; @DateTime.Now.Year
            <a href="https://google.com/" style="">jblimited.com</a>
        </div>
        <!-- Copyright end-->

    </footer>
    <!-- Footer end -->
</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
